@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h4>Add a New Animal:</h4>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
    @Html.LabelFor(model => model.Type)
    @Html.TextBoxFor(model => model.Type)
    @* @Html.ValidationMessageFor(model = > model.Type) *@
    @Html.LabelFor(model => model.Breed)
    @Html.TextBoxFor(model => model.Breed)
    @Html.LabelFor(model => model.Sex)
    @Html.TextBoxFor(model => model.Sex)
    @Html.LabelFor(model => model.Age)
    @Html.TextBoxFor(model => model.Age)
    @Html.LabelFor(model => model.AdmitDate)
    @Html.TextBoxFor(model => model.AdmitDate)
    @Html.LabelFor(model => model.SpecialNeeds)
    @Html.TextBoxFor(model => model.SpecialNeeds)
    <input type="submit" value="Add New Animal" />
}
<br>
<p>@Html.ActionLink("Show All Animals", "Index")</p>