@{
  Layout = "_Layout";
}

@model AnimalShelter.Models.Animal

<h2>Edit Animal Details:</h2> 
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.AnimalId);
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Type)
  @Html.TextBoxFor(model => model.Type)
  @Html.LabelFor(model => model.Breed)
  @Html.TextBoxFor(model => model.Breed)
  @Html.LabelFor(model => model.Sex)
  @Html.TextBoxFor(model => model.Sex)
  @Html.LabelFor(model => model.Age)
  @Html.TextBoxFor(model => model.Age)
  @Html.HiddenFor(model => model.AnimalId);
  @Html.LabelFor(model => model.AdmitDate)
  @Html.TextBoxFor(model => model.AdmitDate, "{0:yyyy-MM-dd}", new { type="date" })
  <br>
  <input type="submit" value="Update" form = "editForm"/>
}

    